<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textAllCaps">false</item>
    </style>


    <style name="myTransparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <!--parent设置为启动页的theme-->
    <style name="AppTheme.customeTheme" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/f02</item>
<!--
        <item name="android:windowFullscreen">?android:windowNoTitle</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        -->
    </style>

    <style name="TRM_ANIM_STYLE">
        <item name="android:windowEnterAnimation">@anim/trm_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/trm_popup_exit</item>
    </style>

    <style name="Tv12white" parent="TextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size24</item>
    </style>

    <style name="Tv15white" parent="TextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size30</item>
    </style>
    <style name="Tv12gray_5D5C5A" parent="TextStyle">
        <item name="android:textColor">@color/gray_5D5C5A</item>
        <item name="android:textSize">@dimen/size24</item>
    </style>

    <style name="Tv15gray_5D5C5A" parent="TextStyle">
        <item name="android:textColor">@color/gray_5D5C5A</item>
        <item name="android:textSize">@dimen/size30</item>
    </style>


    <style name="Tv12Bkla" parent="TextStyle">
        <item name="android:textColor">@color/black_1a1a1a</item>
        <item name="android:textSize">@dimen/size24</item>
    </style>

    <style name="Tv15Bkla" parent="TextStyle">
        <item name="android:textColor">@color/black_1a1a1a</item>
        <item name="android:textSize">@dimen/size30</item>
    </style>

    <style name="Tv12gray_656565" parent="TextStyle">
        <item name="android:textColor">@color/gray_656565</item>
        <item name="android:textSize">@dimen/size24</item>
    </style>

    <style name="Tv15gray_656565" parent="TextStyle">
        <item name="android:textColor">@color/gray_656565</item>
        <item name="android:textSize">@dimen/size30</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:maxLines">3</item>-->
        <!--<item name="android:ellipsize">end</item>-->
    </style>

    <style name="RoundBlueTextView">
        <item name="android:text">xxxx</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size30</item>
        <item name="android:padding">@dimen/px20</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="AppTheme.AppBarLight" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.Popup" parent="ThemeOverlay.AppCompat.Light" />

    <style name="divider_dropshadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/toolbar_dropshadow</item>
    </style>

    <style name="tab_appearance">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="circle_img">
        <item name="android:layout_width">@dimen/px75</item>
        <item name="android:layout_height">@dimen/px75</item>
        <item name="android:src">@mipmap/icon_02</item>
    </style>

    <style name="circle_progress">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/px100</item>
        <item name="android:layout_height">@dimen/px100</item>
        <item name="android:progress">0</item>
    </style>

    <style name="divider_1">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#E6E6E6</item>
    </style>

    <style name="divider_2">
        <item name="android:visibility">visible</item>
        <item name="android:layout_height">@dimen/px50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/violet_562EA6</item>
    </style>

    <style name="ConfirmDialogStyle" parent="Base.Theme.AppCompat.Light.Dialog">

        <item name="windowMinWidthMinor">90%</item>


        <item name="android:textColorPrimary">#000000</item>

        <item name="colorAccent">#0accac</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="RadiobuttonStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:button">@null</item>
    </style>

    <style name="NumberProgressBarStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_max">100</item>
        <item name="progress_current">0</item>

        <item name="progress_unreached_color">#fff</item>
        <item name="progress_reached_color">@color/colorAccent</item>

        <item name="progress_text_size">10sp</item>
        <item name="progress_text_color">@color/colorAccent</item>

        <item name="progress_reached_bar_height">1.5dp</item>
        <item name="progress_unreached_bar_height">0.75dp</item>
    </style>

    <style name="DialogFragmentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorGray4</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

</resources>

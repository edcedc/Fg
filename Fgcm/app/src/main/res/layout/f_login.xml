<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>


    </data>

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@mipmap/a02">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/place_holder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_login"
                        style="@style/Tv15white"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawableBottom="@mipmap/a03"
                        android:drawablePadding="@dimen/px20"
                        android:paddingTop="@dimen/px20"
                        android:text="@string/login_login" />

                    <TextView
                        android:id="@+id/tv_register"
                        style="@style/Tv15gray_5D5C5A"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/px20"
                        android:paddingTop="@dimen/px20"
                        android:text="@string/login_register" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ly_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px70"
                android:layout_marginRight="@dimen/px70"
                android:layout_marginTop="@dimen/px20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/px50"
                    android:paddingRight="@dimen/px50">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/px20"
                            android:background="@mipmap/a04" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/et_register_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/login_hiht_phone"
                            android:inputType="phone"
                            android:maxLength="11"
                            android:textSize="@dimen/size30"
                            app:met_baseColor="@color/black_1a1a1a"
                            app:met_floatingLabel="normal"
                            app:met_floatingLabelText="@string/login_hiht_phone"
                            app:met_primaryColor="@color/gray_E6E6E6" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/px20"
                                android:background="@mipmap/a05" />

                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/et_register_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/login_hiht_code"
                                android:inputType="phone"
                                android:maxLength="6"
                                android:textSize="@dimen/size30"
                                app:met_baseColor="@color/black_1a1a1a"
                                app:met_floatingLabel="normal"
                                app:met_floatingLabelText="@string/login_hiht_code"
                                app:met_primaryColor="@color/gray_E6E6E6" />

                        </LinearLayout>

                        <com.flyco.roundview.RoundTextView
                            android:id="@+id/bt_code"
                            style="@style/RoundBlueTextView"
                            android:layout_width="wrap_content"
                            android:layout_gravity="right|center"
                            android:text="@string/login_get_code"
                            android:textColor="@color/gray_999999"
                            android:textSize="@dimen/size20"
                            app:rv_cornerRadius="@dimen/px30"
                            app:rv_strokeColor="@color/gray_999999"
                            app:rv_strokeWidth="@dimen/px2" />


                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/px20"
                            android:background="@mipmap/a06" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/et_register_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/login_hiht_pwd"
                            android:inputType="textPassword"
                            android:textSize="@dimen/size30"
                            app:met_baseColor="@color/black_1a1a1a"
                            app:met_floatingLabel="normal"
                            app:met_floatingLabelText="@string/login_hiht_pwd"
                            app:met_primaryColor="@color/gray_E6E6E6" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/px20"
                            android:background="@mipmap/a06" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/et_register_pwd2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/login_hiht_pwd2"
                            android:inputType="textPassword"
                            android:textSize="@dimen/size30"
                            app:met_baseColor="@color/black_1a1a1a"
                            app:met_floatingLabel="normal"
                            app:met_floatingLabelText="@string/login_hiht_pwd2"
                            app:met_primaryColor="@color/gray_E6E6E6" />

                    </LinearLayout>


                    <CheckBox
                        android:id="@+id/cb_selected"
                        android:layout_marginLeft="@dimen/px10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px30"
                        android:button="@drawable/selector_check"
                        android:paddingLeft="@dimen/px20"
                        android:text="@string/login_agreement"
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/size22" />

                </LinearLayout>

                <com.flyco.roundview.RoundTextView
                    android:id="@+id/bt_register_login"
                    style="@style/RoundBlueTextView"
                    android:layout_marginTop="@dimen/px50"
                    android:text="@string/login_register_login"
                    app:rv_backgroundColor="@color/violet_773FE3"
                    app:rv_backgroundPressColor="@color/violet_562EA6"
                    app:rv_cornerRadius="@dimen/px30" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ly_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px70"
                android:layout_marginRight="@dimen/px70"
                android:layout_marginTop="@dimen/px20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px50"
                    android:layout_marginRight="@dimen/px50"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/px20"
                        android:background="@mipmap/a04" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/et_login_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/login_hiht_phone"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:textSize="@dimen/size30"
                        app:met_baseColor="@color/black_1a1a1a"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="@string/login_hiht_phone"
                        app:met_primaryColor="@color/gray_E6E6E6" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px50"
                    android:layout_marginRight="@dimen/px50"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/px20"
                        android:background="@mipmap/a06" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/et_login_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/login_hiht_pwd"
                        android:inputType="textPassword"
                        android:textSize="@dimen/size30"
                        app:met_baseColor="@color/black_1a1a1a"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="@string/login_hiht_pwd"
                        app:met_primaryColor="@color/gray_E6E6E6" />

                </LinearLayout>

                <com.flyco.roundview.RoundTextView
                    android:id="@+id/bt_login"
                    style="@style/RoundBlueTextView"
                    android:layout_marginTop="@dimen/px50"
                    android:text="@string/login_login"
                    app:rv_backgroundColor="@color/violet_773FE3"
                    app:rv_backgroundPressColor="@color/violet_562EA6"
                    app:rv_cornerRadius="@dimen/px30" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/px30"
                    android:layout_marginLeft="@dimen/px50"
                    android:layout_marginRight="@dimen/px50">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/bt_forget_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:text="@string/login_forget_password"
                        android:textSize="@dimen/size30"
                        app:met_baseColor="@color/gray_999999"
                        app:met_primaryColor="@color/gray_999999" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/bt_code_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:focusable="false"
                        android:text="@string/login_code_login"
                        android:textSize="@dimen/size30"
                        app:met_baseColor="@color/gray_999999"
                        app:met_primaryColor="@color/gray_999999" />

                </FrameLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/a16" />

                <com.flyco.roundview.RoundTextView
                    android:id="@+id/bt_wx_login"
                    style="@style/RoundBlueTextView"
                    android:layout_marginTop="@dimen/px60"
                    android:drawableLeft="@mipmap/a17"
                    android:text="@string/login_wx"
                    app:rv_backgroundColor="@color/orange_E37A3E"
                    app:rv_backgroundPressColor="@color/orange_BA6432"
                    app:rv_cornerRadius="@dimen/px30" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <View
        style="@style/divider_1"
        android:layout_height="@dimen/px20"/>

    <LinearLayout
        android:paddingRight="@dimen/px30"
        android:paddingTop="@dimen/px30"
        android:paddingLeft="@dimen/px30"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_number"
            android:gravity="left"
            android:layout_weight="1"
            style="@style/Tv15gray_656565" />

        <TextView
            android:id="@+id/tv_state"
            android:textColor="@color/colorTintRed"
            style="@style/Tv15gray_656565" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/white_f4f4f4"
        android:layout_marginLeft="@dimen/px20"
        android:layout_margin="@dimen/px20"
        android:layout_marginBottom="@dimen/px20"
        android:padding="@dimen/px15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time"
            style="@style/Tv15Bkla" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_marginTop="@dimen/px20"
            style="@style/Tv15Bkla" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_marginTop="@dimen/px20"
            style="@style/Tv15Bkla" />

    </LinearLayout>

    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.flyco.roundview.RoundTextView
        android:layout_marginBottom="@dimen/px20"
        android:layout_marginRight="@dimen/px20"
        android:id="@+id/bt_submit"
        android:text="@string/see"
        android:paddingTop="@dimen/px10"
        android:paddingBottom="@dimen/px10"
        android:paddingLeft="@dimen/px40"
        android:paddingRight="@dimen/px40"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rv_cornerRadius="@dimen/px10"
        app:rv_strokeWidth="@dimen/px2"
        app:rv_strokeColor="@color/violet_773FE3"/>

    </FrameLayout>

</LinearLayout>
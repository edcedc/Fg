<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px20"
        android:layout_marginRight="@dimen/px20"
        android:layout_marginTop="@dimen/px35"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.fanwang.fgcm.weight.CircleImageView
                    android:id="@+id/iv_head"
                    style="@style/circle_img" />

                <LinearLayout
                    android:gravity="top"
                    android:layout_marginLeft="@dimen/px20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/Tv15Bkla"
                        android:text="xxxxx" />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/Tv12gray_5D5C5A"
                        android:text="xxxxx" />

                    <View style="@style/divider_1"
                        android:layout_marginTop="@dimen/px10"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="@dimen/px20">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/placeholder" />


            <ImageView
                android:id="@+id/iv_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/px20"
                android:background="@mipmap/b41" />


            <ImageView
                android:visibility="gone"
                android:layout_margin="@dimen/px20"
                android:layout_gravity="bottom|right"
                android:id="@+id/iv_red"
                android:background="@mipmap/b05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_describe"
            style="@style/Tv15Bkla"
            android:layout_marginBottom="@dimen/px20"
            android:layout_marginTop="@dimen/px20"
            android:gravity="left" />

        <View style="@style/divider_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:background="?attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/px20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px10"
                    android:background="@mipmap/b42" />

                <TextView
                    android:id="@+id/tv_comment"
                    style="@style/Tv12gray_656565"
                    android:hint="0" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_praise"
                android:background="?attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/px20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px10"
                    android:background="@mipmap/b43" />

                <TextView
                    android:id="@+id/tv_praise"
                    style="@style/Tv12gray_656565"
                    android:hint="0" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_share"
                android:background="?attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/px20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px10"
                    android:background="@mipmap/b44" />

                <TextView
                    style="@style/Tv12gray_656565"
                    android:text="@string/share" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/divider_1"
        android:layout_height="@dimen/px10" />

</LinearLayout>

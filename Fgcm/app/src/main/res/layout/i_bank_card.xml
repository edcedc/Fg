<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        style="@style/divider_1"
        android:layout_height="@dimen/px20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_margin="@dimen/px20"
            android:background="@mipmap/e20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="@dimen/px40"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:textColor="@color/white"
                    style="@style/Tv15Bkla" />

                <TextView
                    android:id="@+id/tv_number"
                    android:textColor="@color/white"
                    style="@style/Tv15Bkla" />

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/px20"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginRight="@dimen/px20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_default"
                android:drawablePadding="@dimen/px20"
                android:drawableLeft="@mipmap/e22"
                android:padding="@dimen/px20"
                android:text="@string/default_bank_card"
                android:textColor="@color/colorTintRed"
                style="@style/Tv12gray_656565" />

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0.1dp"/>

            <TextView
                android:id="@+id/tv_delete"
                android:drawablePadding="@dimen/px20"
                android:drawableLeft="@mipmap/e23"
                android:padding="@dimen/px20"
                android:text="@string/delete"
                style="@style/Tv12gray_656565" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ly_edit"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rv_cornerRadius_TL="@dimen/px20"
    app:rv_cornerRadius_TR="@dimen/px20" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/b34" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/px10">

        <com.fanwang.fgcm.weight.TextEditTextView
            android:textSize="15sp"
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/bt_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px10"
            android:padding="@dimen/px20"
            android:text="@string/Send_out"
            android:textColor="@color/white"
            app:rv_backgroundColor="@color/placeholder"
            app:rv_cornerRadius="@dimen/px10" />

    </LinearLayout>

</com.flyco.roundview.RoundLinearLayout>